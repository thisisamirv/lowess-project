# Silencing is handled by @ prefix on commands
TARGET_DIR = @TARGET_DIR@
LIBDIR = @LIBDIR@
STATLIB = $(LIBDIR)/librfastlowess.a

# Linking flags (substituted by configure)
PKG_LIBS = @UNDEFINED_FLAGS@ @GC_SECTIONS@

all: clean

$(SHLIB): $(STATLIB)

$(STATLIB):
	@# Silence informational tool output
	@cargo --version > /dev/null 2>&1
	@rustc --version > /dev/null 2>&1
	@if [ -f vendor.tar.xz ] && [ ! -d vendor ]; then \
		tar --extract --xz -f vendor.tar.xz && \
		find vendor -name "CITATION.cff" -delete && \
		find vendor -name "CITATION" -delete; \
	fi
	@mkdir -p .cargo
	@cp cargo-config.toml .cargo/config.toml
	@cp Cargo.toml Cargo.toml.orig
	@if ! grep -q "^\[workspace\]" Cargo.toml; then echo '[workspace]' >> Cargo.toml; fi
	@mkdir -p $(TARGET_DIR)
	@if [ "@IS_WASM@" = "1" ]; then \
		rm -f .cargo/config.toml && \
		export RUSTFLAGS="-C symbol-mangling-version=v0 -C panic=abort" && \
		cargo build -q -Z build-std=std,panic_abort --release --manifest-path=Cargo.toml --target-dir $(TARGET_DIR) --target wasm32-unknown-emscripten || (mv Cargo.toml.orig Cargo.toml && exit 1); \
	else \
		cargo build -q --release --manifest-path=Cargo.toml --target-dir $(TARGET_DIR) || (mv Cargo.toml.orig Cargo.toml && exit 1); \
	fi
	@mv Cargo.toml.orig Cargo.toml
	@rm -rf .cargo

clean:
	@rm -Rf $(SHLIB) $(STATLIB) $(OBJECTS)

dummy.o: dummy.c
	@$(CC) $(ALL_CPPFLAGS) $(ALL_CFLAGS) -c dummy.c -o dummy.o
